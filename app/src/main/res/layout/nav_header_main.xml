<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@drawable/bg_nav_header"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_large_small"
    android:paddingTop="@dimen/margin_medium"
    android:paddingRight="@dimen/margin_large_small"
    android:paddingBottom="@dimen/margin_medium_small"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="@dimen/icon_avatar_size"
        android:layout_height="@dimen/icon_avatar_size"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large_small">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/icon_avatar_size"
            android:layout_height="@dimen/icon_avatar_size"
            android:src="@drawable/default_avatar"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnLogin"
            style="@style/TextButtonDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_normal_small"
            android:layout_marginRight="@dimen/margin_normal_small"
            android:layout_weight="1"
            android:background="@drawable/selector_button_login"
            android:paddingTop="@dimen/margin_normal"
            android:paddingBottom="@dimen/margin_normal"
            android:text="@string/button_login_lower"
            android:textSize="@dimen/font_size_normal" />

        <TextView
            android:id="@+id/btnRegister"
            style="@style/TextButtonDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_small"
            android:layout_marginLeft="@dimen/margin_normal_small"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_register_navigation_bar"
            android:paddingTop="@dimen/margin_normal"
            android:paddingBottom="@dimen/margin_normal"
            android:text="@string/button_register_lower"
            android:textSize="@dimen/font_size_normal" />
    </LinearLayout>
</LinearLayout>