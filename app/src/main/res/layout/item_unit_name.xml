<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnContent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_no_border_no_radius_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgChecked"
            android:layout_width="@dimen/icon_selected_item_size"
            android:layout_height="@dimen/icon_selected_item_size"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium_small"
            android:layout_marginBottom="@dimen/margin_medium_small"
            android:src="@drawable/ic_checked" />

        <TextView
            android:id="@id/tvUnitName"
            style="@style/TextViewDefaultSingleLine"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_size_medium_small" />

        <LinearLayout
            android:id="@+id/lnEdit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/bg_transparent_no_border_no_radius_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium">

            <ImageView
                android:layout_width="@dimen/icon_selected_item_size"
                android:layout_height="@dimen/icon_selected_item_size"
                android:src="@drawable/ic_edit" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnBottom"
        android:layout_width="fill_parent"
        android:layout_height="0.100000024dip"
        android:background="@color/color_divider"
        android:orientation="horizontal" />
</LinearLayout>